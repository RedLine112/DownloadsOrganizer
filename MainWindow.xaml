<Window x:Class="DownloadsOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="İndirilenler Yöneticisi" Height="700" Width="1000"
        Background="{DynamicResource MainBackground}"
        WindowStartupLocation="CenterScreen">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" ResizeBorderThickness="5" GlassFrameThickness="1" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False">
                <TextBlock Text="🚀" FontSize="14" Margin="0,0,8,0"/>
                <TextBlock Text="DOWNLOADS ORGANIZER" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource SubTextBrush}" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0" WindowChrome.IsHitTestVisibleInChrome="True">
                <ComboBox x:Name="cbSort" Width="140" Height="26" Margin="0,0,15,0" SelectionChanged="CbSort_SelectionChanged" SelectedIndex="0" VerticalAlignment="Center" FontSize="11">
                    <ComboBoxItem Content="Tarih (En Yeni)"/>
                    <ComboBoxItem Content="Tarih (En Eski)"/>
                    <ComboBoxItem Content="İsim (A-Z)"/>
                    <ComboBoxItem Content="Boyut (Büyük)"/>
                </ComboBox>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Dark" FontSize="11" Foreground="{DynamicResource SubTextBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ToggleButton x:Name="btnTheme" Click="BtnTheme_Click" Style="{StaticResource SwitchToggleStyle}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="3" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                <Button Content="─" Style="{StaticResource TitleBarButtonStyle}" Click="BtnMinimize_Click"/>
                <Button Content="✕" Style="{StaticResource CloseButtonStyle}" Click="BtnClose_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="15,0,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="lblTotalCount" Text="Toplam Dosya: 0" Margin="5,0,0,10" Foreground="{DynamicResource SubTextBrush}" FontSize="12"/>

            <Border Grid.Row="1" Grid.Column="0" Background="{DynamicResource CardBackground}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="5">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBlock x:Name="lblTitleCompressed" Text="📦 SIKIŞTIRILMIŞ" Style="{StaticResource CardHeaderStyle}"/>
                        <Button Content="↗ Detay" HorizontalAlignment="Right" Click="OpenCategory_Click" Tag="Compressed"/>
                    </Grid>
                    <ListBox x:Name="listCompressed" Grid.Row="1" Margin="-5,10,-5,0" BorderThickness="0" Background="Transparent" DisplayMemberPath="Name" ScrollViewer.VerticalScrollBarVisibility="Auto" MouseDoubleClick="MainList_MouseDoubleClick">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Aç" Click="Context_Open_Click"/>
                                <MenuItem Header="Klasör" Click="Context_ShowInFolder_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Background="{DynamicResource CardBackground}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="5">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBlock x:Name="lblTitleImages" Text="🖼️ GÖRSELLER" Style="{StaticResource CardHeaderStyle}"/>
                        <Button Content="↗ Detay" HorizontalAlignment="Right" Click="OpenCategory_Click" Tag="Images"/>
                    </Grid>
                    <ListBox x:Name="listImages" Grid.Row="1" Margin="-5,10,-5,0" BorderThickness="0" Background="Transparent" DisplayMemberPath="Name" ScrollViewer.VerticalScrollBarVisibility="Auto" MouseDoubleClick="MainList_MouseDoubleClick">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Aç" Click="Context_Open_Click"/>
                                <MenuItem Header="Klasör" Click="Context_ShowInFolder_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Row="2" Grid.Column="0" Background="{DynamicResource CardBackground}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="5">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBlock x:Name="lblTitleDocs" Text="📄 BELGELER" Style="{StaticResource CardHeaderStyle}"/>
                        <Button Content="↗ Detay" HorizontalAlignment="Right" Click="OpenCategory_Click" Tag="Docs"/>
                    </Grid>
                    <ListBox x:Name="listDocs" Grid.Row="1" Margin="-5,10,-5,0" BorderThickness="0" Background="Transparent" DisplayMemberPath="Name" ScrollViewer.VerticalScrollBarVisibility="Auto" MouseDoubleClick="MainList_MouseDoubleClick">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Aç" Click="Context_Open_Click"/>
                                <MenuItem Header="Klasör" Click="Context_ShowInFolder_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Row="2" Grid.Column="1" Background="{DynamicResource CardBackground}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="5">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBlock x:Name="lblTitleMedia" Text="🎵 MEDYA" Style="{StaticResource CardHeaderStyle}"/>
                        <Button Content="↗ Detay" HorizontalAlignment="Right" Click="OpenCategory_Click" Tag="Media"/>
                    </Grid>
                    <ListBox x:Name="listMedia" Grid.Row="1" Margin="-5,10,-5,0" BorderThickness="0" Background="Transparent" DisplayMemberPath="Name" ScrollViewer.VerticalScrollBarVisibility="Auto" MouseDoubleClick="MainList_MouseDoubleClick">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Aç" Click="Context_Open_Click"/>
                                <MenuItem Header="Klasör" Click="Context_ShowInFolder_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Row="3" Grid.Column="0" Background="{DynamicResource CardBackground}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="5">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBlock x:Name="lblTitleExecutables" Text="🚀 UYGULAMALAR" Style="{StaticResource CardHeaderStyle}"/>
                        <Button Content="↗ Detay" HorizontalAlignment="Right" Click="OpenCategory_Click" Tag="Executables"/>
                    </Grid>
                    <ListBox x:Name="listExecutables" Grid.Row="1" Margin="-5,10,-5,0" BorderThickness="0" Background="Transparent" DisplayMemberPath="Name" ScrollViewer.VerticalScrollBarVisibility="Auto" MouseDoubleClick="MainList_MouseDoubleClick">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Aç" Click="Context_Open_Click"/>
                                <MenuItem Header="Klasör" Click="Context_ShowInFolder_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Row="3" Grid.Column="1" Background="{DynamicResource CardBackground}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="5">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBlock x:Name="lblTitleOthers" Text="📁 DİĞER" Style="{StaticResource CardHeaderStyle}"/>
                        <Button Content="↗ Detay" HorizontalAlignment="Right" Click="OpenCategory_Click" Tag="Others"/>
                    </Grid>
                    <ListBox x:Name="listOthers" Grid.Row="1" Margin="-5,10,-5,0" BorderThickness="0" Background="Transparent" DisplayMemberPath="Name" ScrollViewer.VerticalScrollBarVisibility="Auto" MouseDoubleClick="MainList_MouseDoubleClick">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Aç" Click="Context_Open_Click"/>
                                <MenuItem Header="Klasör" Click="Context_ShowInFolder_Click"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="LoadingGrid" Grid.RowSpan="2" Background="{DynamicResource MainBackground}" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="YÜKLENİYOR" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextBrush}" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="150" Height="4" Margin="0,15,0,0" Foreground="{DynamicResource AccentColor}" Background="#333" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>